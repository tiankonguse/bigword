/**index.wxss**/
@import "/page/common/index.wxss";


.container-box {
    background-color: #efeff4;
}

.img-box {
    padding: 0rpx;
    background-color: #fff;
    border-bottom: 0rpx solid #e5e5e5;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.img-box {
    background-color: #000;
}

.input-row {
    margin: 30rpx auto;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 32rpx;
    background-color: #fff;
    font-size: 34rpx;
    color: #000;
}

.input-row input {
    margin-left: 100rpx;
    width: 300rpx;
}

.bornbtn {
    width: 686rpx;
    margin: auto;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom:10px;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 100px;
}


.kind-list-text {
    margin-left:20rpx;
}

.about-userinfo-country{
    color: #ccc;
}

.about-userinfo-avatarUrl{
    width:120rpx;
    height:120rpx;
}

.about-bigwordCode{
    width:420rpx;
    height:420rpx;
}

.kind-list-item-hd-code{
    display:block;
    text-align:center;
}

.about-bigwordCode-text{
    color: #ccc;
}

.about-contact{
    display:block;
    box-sizing:border-box;
    width:100%;
}

.about-hd{
    padding:3rpx;
}

.about-hd button{
    font-size:13px;
}

.kind-list-item-hd{
    padding:20rpx;
}

.index-bd{
    padding-bottom: 10rpx;
}