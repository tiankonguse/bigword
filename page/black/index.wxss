/**index.wxss**/
@import "../common/index.wxss";

.container-box {
    background-color: #efeff4;
}

.img-box {
    padding: 0rpx;
    background-color: #fff;
    border-bottom: 0rpx solid #e5e5e5;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}



.input-row {
    margin: 10rpx auto;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 12rpx;
    font-size: 34rpx;
    color: #f5f5eb;
}



.input-row input {
    border-bottom: 1px solid #d2d2d2;
    color:#3b212f;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-color-circle {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    margin-left:6rpx;
    border: 3rpx solid #dcdcdc;
}

.selected-color-circle{
    border: 3rpx solid #ca4f07;
}



.mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom:10px;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200rpx;
}

.lableName{
    width:15%;
    color: #1E0B0F;
}

.inputName{
    width:84%;
}

.no-border-bottom{
    border-bottom:0px solid red;
}

.slider-fontsize{
    margin: 0rpx;
}

.input-word{
    text-align: center;
}

.input-word-placeholder{
    color:#e0e0e0;
    text-align: center;
}

button.bornbtn {
    width: 386rpx;
    margin: auto;
    margin-bottom:20rpx;
    background-color:#FFFFFF;
}